@inherits LayoutComponentBase
@inject BsStateProvider _authenticationStateHelper
@inject NavigationManager _navigationManager
@attribute [Authorize]

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    /// <summary>
    /// Page initialized event
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        if (!(await _authenticationStateHelper.IsUserAuthenticated()))
        {
            _navigationManager.NavigateTo("/signin");
        }
    }
}